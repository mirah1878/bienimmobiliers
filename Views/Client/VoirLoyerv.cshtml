
        <div class="col-lg-4">
          <div class="card">
            <div class="card-body">
                <h5 class="card-title">Paye : @(ViewBag.paye?.ToString("N0") ?? "0") Ar</h5>
                <h5 class="card-title">NonPaye : @(ViewBag.npaye?.ToString("N0") ?? "0") Ar</h5>

              <p class="card-text"></p>
            </div>
          </div>
        </div>    
          <div class="card">
            <div class="card-body">
                <table class="table table-bordered border-primary">
                    <thead>
                      <tr>
                        <th scope="col">Bien</th>
                        <th scope="col">date_debut</th>
                        <th scope="col">date fin </th>
                        <th scope="col"> </th>
                      </tr>
                    </thead>
                    <tbody>
                    @foreach(var list in ViewBag.list){
                      <tr>
                        @foreach(var bien in ViewBag.bien){
                            @if(list.IdBien == bien.Id){
                                <td>@bien.Nom</td>
                            }
                        }
                        <td>@list.DateDebut.ToShortDateString()</td>
                        <td>@list.FinDuMois.ToShortDateString()</td>
                        @if(list.Paye == 0){
                            <th scope="row" style="color: red;"> à payer </th>
                        }else if(list.Paye == 1){
                            <th scope="row"> payé </th>
                        }
                      </tr>
                    }
                    </tbody>
                </table>
            </div>
        
